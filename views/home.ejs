<!DOCTYPE html>
<html lang="en">
  <head>
    <style>
      body {
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
      }
    </style>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>home</title>
  </head>
  <body>
    <h1>URL Shortener</h1>

    <% if (locals.id) {%> <%# locals : data coming from backend(db) %>
    <p>Generated URL: http://localhost:2100/api/<%= id %></p>
    <%} %>

    <div>
      <form action="/api/url" method="post">
        <label for="urll">Enter your Original URL: </label>
        <input type="text" name="url" id="urll"  placeholder="https://example.com/" />
        <button type="submit">Generate</button>
      </form>
    </div>

    <div>
      <% if (locals.urls) { %>
      <table>
        <thead>
          <thead>
            <th>S.no.</th>
            <th>Short URL</th>
            <th>Redirect</th>
            <th>Clicks</th>
            <th>Original User</th>
          </thead>
        </thead>

        <tbody>
          <% urls.forEach((url, index) => { %>
          <tr>
            <td><%= index+1 %></td>
            <td><%= url.shortId %></td>
            <td><%= url.redirectUrl %></td>
            <td><%= url.visitHistory.length %></td>
            <td><%= url.createdBy %></td>
          </tr>
          <% }) %>
        </tbody>
      </table>
      <% } %>
    </div>
  </body>
</html>
